# Dependencies
apt-get update && apt-get install -y python2.7 git python-pip raspi-config nano sudo htop screen curl hobbit-plugins xymon-client
pip install pyusb

# Set up avstaff user
adduser avstaff  
usermod -a -G sudo avstaff  
usermod -a -G dialout avstaff  

# Get main repository
cd /usr/local/lib/
git clone https://github.com/rrah/PyLiteCo.git

# Grab submodules
cd PyLiteCo
git submodule init && git submodule update

# Make it look like a program
ln -s /usr/local/lib/PyLiteCo/__main__.py /usr/local/bin/pyliteco.py

# Set up service and load at boot
cp pyliteco /etc/init.d/
chmod +x /etc/init.d/pyliteco
update-rc.d pyliteco defaults

# Stop root access over ssh
sed "s/PermitRootLogin yes/PermitRootLogin no/" -i.bak /etc/ssh/sshd_config  
sudo service ssh restart

# Set up xymon thing
crontab -l | { cat; echo "*/5 * * * * /usr/local/lib/PyLiteCo/xymonhost.sh"; } | crontab -